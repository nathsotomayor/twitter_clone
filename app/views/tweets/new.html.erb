  <div class="card-body">
    <%= form_with(model: @tweet, local: true) do |f| %>
      <% if @tweet.errors.any? %>
        <div class="alert alert-danger" id="error_explanation">
          <ul>
            <% @tweet.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.text_area :tweet, class: "form-control", placeholder: "What's happening" %>
      </div>
      <div class="mb-3">
        <%= f.submit "Tweet", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>