<div class="card">
  <div class="card-header">
    Who to follow
  </div>
  <ul class="list-group list-group-flush">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <div class="card-body pe-1 ps-1 pb-1 pt-1">
          <strong class="card-title"><%= user.name %></strong>
          <small class="card-subtitle text-muted">
          @<%= user.username %>
          <span><%= render partial: "tweets/follow_button", :user => User.find_by_username(params[:id]) %></span>
          </small>
        </div>
      </li>
    <% end %>
  </ul>
</div>
